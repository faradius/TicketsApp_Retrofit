<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.developerscracks.ticketsappretrofit.ui.screens.home.view.HomeFragment"
        android:label="Lista de Tickets"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_ticketDetailFragment"
            app:destination="@id/ticketDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createTicketFragment"
            app:destination="@id/createTicketFragment" />
    </fragment>
    <fragment
        android:id="@+id/ticketDetailFragment"
        android:name="com.developerscracks.ticketsappretrofit.ui.screens.detailticket.view.TicketDetailFragment"
        android:label="Detalle del Ticket"
        tools:layout="@layout/fragment_ticket_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/createTicketFragment"
        android:name="com.developerscracks.ticketsappretrofit.ui.screens.createticket.view.CreateTicketFragment"
        android:label="Nuevo Ticket"
        tools:layout="@layout/fragment_create_ticket" />
</navigation>